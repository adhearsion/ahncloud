- content_for :head do
  %script{ :type => "text/javascript", :src => "/javascript/divtools.js" }
- content_for :title do
  = "Dashboard: #{@user.username}"
- content_for :header do
  = "Dashboard: #{@user.username}"
- content_for :content do
  #apps
    - @apps.each do |app|
      %div{ :id => "app_#{app.name}" }
        %button{ :onclick => "showHideDiv('#{app.name}')" } [+]
        = app.name
        .appDetails{ :id => "#{app.name}"}
          JID: &nbsp;
          = app.jid
          %br
          SIP Address: 
          = app.sip_address
          %br
          Created At: 
          = app.created_at
          %br
          DID Active: 
          = app.did_active
          %br
          %a{ :href => "" } Activate DID
      %br
  %br
  %a{ :href => "/new_app"} Create a New App
- content_for :footer do
  %a{ :href => "/logout" } Log Out