!!!
%html
  %head
    %link{ :rel => "stylesheet", :type => "text/css", :href => "#{url('/css/styles.css')}" }
    %script{ :type => "text/javascript", :src => "#{url('/javascript/flash.js')}"}
    = yield_content :head
    %title
      = yield_content :title
  %body
    #bodyDiv  
      #header
        = yield_content :header
      #flash
        = show_flash[:message]
        :javascript
          showFlash("#{show_flash[:method]}");  
      #content
        = yield_content :content
      #footer
        = yield_content :footer
